{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json",
        "examples/**"
      ],
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): New release :tada: :rocket:",
      "excludeDependents": true
    },
    "publish": {
      "message": "chore(release): New release :tada: :rocket:"
    }
  },
  "publish": {
    "conventionalCommits": true
  }
}
